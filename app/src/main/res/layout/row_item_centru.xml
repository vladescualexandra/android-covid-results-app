<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/vladescu_alexandra_bianca_centru_icon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_baseline_local_hospital_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vladescu_alexandra_bianca_centru_judet"
        style="@style/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/vladescu_alexandra_bianca_default"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vladescu_alexandra_bianca_centru_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vladescu_alexandra_bianca_centru_oras"
        style="@style/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/vladescu_alexandra_bianca_default"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vladescu_alexandra_bianca_centru_icon"
        app:layout_constraintTop_toBottomOf="@+id/vladescu_alexandra_bianca_centru_judet" />

    <TextView
        android:id="@+id/vladescu_alexandra_bianca_centru_adresa"
        style="@style/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/vladescu_alexandra_bianca_default"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vladescu_alexandra_bianca_centru_icon"
        app:layout_constraintTop_toBottomOf="@+id/vladescu_alexandra_bianca_centru_oras" />


</androidx.constraintlayout.widget.ConstraintLayout>